@model IQueryable<Product>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Products</title>
</head>
<body>
    

    @foreach (var p in Model ?? Enumerable.Empty<Product>())
    {
        <div>
            <h3>@p.Name</h3>
            <p>@p.Description</p>
            <h4>@p.Price.ToString("c")</h4>
        </div>
    }
</body>
</html>
