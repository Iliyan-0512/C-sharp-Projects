@model PieceRequest

@{

}
<h2>Бяла фигура</h2>

<form asp-action="Index" method="post">
	<div>
		<label asp-for="Piece"></label>
		<input name="Request.Piece" asp-for="Piece" value="@Model.Piece" />
		<span asp-validation-for="Piece" class="text-danger"></span>
	</div>

	<div>
		<label asp-for="Position"></label>
		<input  name="Request.Position" asp-for="Position" value="@Model.Position" />
		<span asp-validation-for="Position" class="text-danger"></span>
	</div>
	<hr />
	<div>
		<label asp-for="BlackPiece"></label>
		<input name="Request.BlackPiece" asp-for="BlackPiece" value="@Model.BlackPiece" />

		<span asp-validation-for="BlackPiece" class="text-danger"></span>
	</div>

	
	<div>
		<label asp-for="BlackPosition"></label>
		<input name="Request.BlackPosition" asp-for="BlackPosition" value="@Model.BlackPosition" />
		<span asp-validation-for="BlackPosition" class="text-danger"></span>
	</div>

	<button type="submit">Изпрати</button>
</form>
